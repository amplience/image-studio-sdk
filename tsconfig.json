{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "useDefineForClassFields": true,
    "lib": [
      "es2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "sourceMap": true,

    /* Bundler mode */
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    /* Linting */
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "rootDir": "src",
    "baseUrl": ".",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/stories/*"
  ]
}